<%# app/views/two_factor/show.html.erb %>

<div class="container">
  <h2>Enable Two-Factor Authentication</h2>
  <p>To enable two-factor authentication, scan the QR code with your Google Authenticator app and enter the generated code below.</p>

  <div class="row">
    <div class="col-md-6">
      <h4>Scan this QR Code:</h4>
      <%= image_tag(@qr_code) %>
    </div>
    <div class="col-md-6">
      <%= form_with(url: two_factor_path, method: :patch, local: true) do |form| %>
        <div class="form-group">
          <%= form.label :token, "Verification Code" %>
          <%= form.text_field :token, class: "form-control", autofocus: true %>
        </div>
        <%= form.submit "Enable", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
